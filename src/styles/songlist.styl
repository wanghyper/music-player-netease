.songlist

  .cover
    position: relative
    display: flex
    width 100%
    height 120px
    color: #f4f4f4

    .bg
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      filter brightness(60%)
      z-index -1
      background-size 100%
      background-position center

    .poster
      float: left
      width: 120px
      height: 120px
    .user
      float: left
      padding 0 5px
      .title
        margin 10px 0
        font-size 20px
        line-height 30px
        text-shadow 0 0 5px #f0f0f0
      .avatar
        width: 30px
        height: 30px
        border-radius 50%
        vertical-align middle
        margin-right 10px
        box-shadow 0 0 5px #f0f0f0
      .nickname
        font-size 13px
