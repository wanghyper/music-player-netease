.progress-bar
  margin 0 10px
  display flex
  justify-content space-evenly
  align-items center
  .time
    width 80px
    &.curr
      text-align left
    &.max
      text-align right
  .bar
    flex-grow 1
    width 100%
    height 8px
    border-radius 4px
    background: #d5d5d5

    .curr
      position: relative
      height 100%
      width 0
      border-radius @border-radius
      background: #ec2b13

      .btn
        position absolute
        left: 100%
        top 50%
        width 20px
        height @width
        margin (-@width / 2) 0 0 (-@width / 2)
        border-radius 50%
        background: #fff953;