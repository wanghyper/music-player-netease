header.header
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center;
  color: #ffffff;
  background: #010101;
  box-shadow: 0 1px 10px rgba(0, 0, 0, 0.2);


  img
    width: 30px;
    height: 30px;
    margin-left: 10px;
    vertical-align: middle;

  span
    flex-grow: 1;
    margin-left: 10px;
    font-size: 20px;
    text-align: center;
    text-indent: -40px;
    vertical-align: middle;
