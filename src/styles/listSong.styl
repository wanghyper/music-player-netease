.ListSong.tip
  width 100%
  margin-top 30px
  text-align center
ul.ListSong li
  list-style  none
  height 60px
  width 100%
  display: flex
  flex-direction row
  justify-content center
  text-indent 5px
  background #fffbf0
  &:nth-child(2n+1)
    background: rgba(189, 245, 248, 0.5);
  &.curr
    box-shadow 0 0 5px #39e9ff inset
  .left
    width calc(100% - 60px)
    flex-grow 1
    flex-shrink 1
    display flex
    flex-direction column
    justify-content center

    .name
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

      .alia
        color: rgba(0, 0, 0, 0.5)

    .sub
      font-size small

  .right
    padding 0 5px 0 10px
    line-height 60px

    svg
      width: 30px
      height: 30px
      vertical-align: middle